extends layout

block content

  h1 Presenter: #{presenter.name}
  
  div(style='margin-left:20px;margin-top:20px')
  
    p #[strong Topic:] 
      a(href=schedule.topic.url) #{schedule.topic.title}
    p #[strong Presenter: ]
      a(href=schedule.presenter.url) #{schedule.presenter.name}
    p #[strong Room:] 
      a(href=schedule.room.url) #{schedule.room.roomNumber}
    p #[strong Session:] 
      a(href=schedule.session.url) #{schedule.session.time}
  
  div(style='margin-left:20px;margin-top:20px')

    hr
    p
        a(href=presenter.url+'/delete') Delete Presenter
    p
        a(href=presenter.url+'/update') Update Presenter