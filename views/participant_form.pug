extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='firstName') First Name:
      input#firstName.form-control(type='text' placeholder='First name' name='firstName' required='true' value=(undefined===participant ? '' : participant.firstName) )
      label(for='lastName') Last Name:
      input#lastName.form-control(type='text' placeholder='Last name' name='lastName' required='true' value=(undefined===participant ? '' : participant.lastName) )
      label(for='address') Address:
      input#address.form-control(type='text' placeholder='Address' name='address' required='true' value=(undefined===participant ? '' : participant.address) )
      label(for='email') Email:
      input#email.form-control(type='text' placeholder='Email' name='email' required='true' value=(undefined===participant ? '' : participant.email) )
      div.form-group
      label(for='school') School:
      select#highschool.form-control(type='select', placeholder='Select high school' name='highSchool' required='true' )
        for highSchool in highSchool_list
          if participant
            option(value=highSchool._id selected=(highSchool._id.toString()==participant.highSchool ? 'selected' : false) ) #{highSchool.name}
          else
            option(value=highSchool._id) #{highSchool.name}
      label(for='interest1') Primary Interest:
      select#topic.form-control(type='select', placeholder='Select topic' name='interest1' required='true' )
        for topic in topic_list
          if participant
            option(value=topic._id selected=(topic._id.toString()==participant.interest1 ? 'selected' : false) ) #{topic.title}
          else
            option(value=topic._id) #{topic.title}
      label(for='Interest2') Second Interest:
      select#topic.form-control(type='select', placeholder='Select topic' name='interest2' required='true' )
        for topic in topic_list
          if participant
            option(value=topic._id selected=(topic._id.toString()==participant.interest2 ? 'selected' : false) ) #{topic.title}
          else
            option(value=topic._id) #{topic.title}
      label(for='interest3') Third Interest:
      select#topic.form-control(type='select', placeholder='Select topic' name='interest3' required='true' )
        for topic in topic_list
          if participant
            option(value=topic._id selected=(topic._id.toString()==participant.interest3 ? 'selected' : false) ) #{topic.title}
          else
            option(value=topic._id) #{topic.title}
      label(for='interest4') Fourth Interest:
      select#topic.form-control(type='select', placeholder='Select topic' name='interest4' required='true' )
        for topic in topic_list
          if participant
            option(value=topic._id selected=(topic._id.toString()==participant.interest4 ? 'selected' : false) ) #{topic.title}
          else
            option(value=topic._id) #{topic.title}
      label(for='interest5') Fifth Interest:
      select#topic.form-control(type='select', placeholder='Select topic' name='interest5' required='true' )
        for topic in topic_list
          if participant
            option(value=topic._id selected=(topic._id.toString()==participant.interest5 ? 'selected' : false) ) #{topic.title}
          else
            option(value=topic._id) #{topic.title}
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg